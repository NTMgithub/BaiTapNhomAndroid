<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP CHUYỂN ĐỔI TIỀN"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            />

        <EditText

            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập số tiền muốn đổi "
            android:inputType="number" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Chọn quốc gia hiện tại"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <ImageView
            android:id="@+id/change"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icon" />


        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Chọn quốc gia muốn quy đổi"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <!--        <Button-->
<!--            android:id="@+id/button_lichsu"-->
<!--            android:layout_width="114dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:text="LỊCH SỬ"-->
<!--            app:backgroundTint="#D18268"-->
<!--            app:iconTint="#FFFFFF" />-->

        <Button
            android:id="@+id/button_convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CHUYỂN ĐỔI"
            app:backgroundTint="#009688"
            app:iconTint="#FFFFFF" />

        <TextView

            android:id="@+id/button_lichsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LỊCH SỬ ĐỔI"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:backgroundTint="#D18268"
            android:textStyle="bold"
            app:iconTint="#FFFFFF" />

        <EditText
            android:id="@+id/textViewtigia"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:focusable="false"
            android:lines="10"
            android:maxLines="10"
            android:inputType="textMultiLine"
            android:autofillHints=""
            android:scrollbars="vertical"
            android:imeOptions=""

            android:gravity="center"
            android:background="@color/white"
            android:textColor="@color/black"

            android:text="-----------------"
            />



    </LinearLayout>
</ScrollView>